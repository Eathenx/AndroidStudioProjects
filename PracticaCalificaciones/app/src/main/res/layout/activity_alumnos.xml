<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zmct_mz1qhoxw_p9nsgnwa"
    tools:context=".Alumnos">

    <TextView
        android:id="@+id/text_title_alumnos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Gestión de Alumnos"
        android:textColor="#9E3A38"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Matricula -->
    <TextView
        android:id="@+id/text_matricula_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:text="Matrícula"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_alumnos" />

    <EditText
        android:id="@+id/Edit1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:hint="Ingrese matrícula"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@id/text_matricula_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_matricula_label"
        app:layout_constraintTop_toTopOf="@id/text_matricula_label" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/text_nombre_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Nombre"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@id/text_matricula_label"
        app:layout_constraintTop_toBottomOf="@id/text_matricula_label" />

    <EditText
        android:id="@+id/Edit2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:hint="Ingrese nombre"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@id/text_nombre_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_nombre_label"
        app:layout_constraintTop_toTopOf="@id/text_nombre_label" />

    <!-- Carrera -->
    <TextView
        android:id="@+id/text_carrera_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Carrera"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@id/text_nombre_label"
        app:layout_constraintTop_toBottomOf="@id/text_nombre_label" />

    <EditText
        android:id="@+id/Edit3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:hint="Ingrese carrera"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@id/text_carrera_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_carrera_label"
        app:layout_constraintTop_toTopOf="@id/text_carrera_label" />

    <!-- Buttons -->
    <Button
        android:id="@+id/Btn1"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="#9E3A38"
        android:drawableLeft="@drawable/folder_add"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="60dp" />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="#9E3A38"
        android:drawableLeft="@drawable/folder_search"
        android:text="Lista alumnos"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:cornerRadius="60dp" />

    <Button
        android:id="@+id/Btn3"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="#9E3A38"
        android:drawableLeft="@drawable/folder_del"
        android:text="Borrar"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="60dp" />

    <Button
        android:id="@+id/Btn4"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="#9E3A38"
        android:drawableLeft="@drawable/folder_up"
        android:text="Actualizar"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="60dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        app:constraint_referenced_ids="Btn1,Btn2,Btn3,Btn4"
        app:flow_horizontalGap="16dp"
        app:flow_maxElementsWrap="2"
        app:flow_verticalGap="20dp"
        app:flow_wrapMode="aligned"
        app:flow_horizontalStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
