<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zmct_mz1qhoxw_p9nsgnwa"
    tools:context=".Calificaciones">

    <TextView
        android:id="@+id/text_view_title_calificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Calificaciones"
        android:textColor="#9E3A38"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:text="Alumno"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title_calificaciones" />

    <Spinner
        android:id="@+id/spinner_alumno"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/purple_200"
        android:hint="Alumno"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_alumno" />

    <TextView
        android:id="@+id/label_materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="Materia"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_alumno" />

    <Spinner
        android:id="@+id/spinner_materia"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/purple_200"
        android:hint="Materia"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_materia" />

    <LinearLayout
        android:id="@+id/linearLayout_calificaciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_materia">

        <EditText
            android:id="@+id/edit_text_unidad1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:hint="U1"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#9E9E9E" />

        <EditText
            android:id="@+id/edit_text_unidad2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:hint="U2"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#9E9E9E" />

        <EditText
            android:id="@+id/edit_text_unidad3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:hint="U3"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#9E9E9E" />

        <EditText
            android:id="@+id/edit_text_unidad4"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"

            android:hint="U4"
            android:inputType="numberDecimal"
            android:padding="12dp"

            android:textColor="@android:color/black"
            android:textColorHint="#9E9E9E" />
    </LinearLayout>

    <Button
        android:id="@+id/Btn1"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#9E3A38"
        android:drawableLeft="@drawable/folder_add"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="#9E3A38"
        android:drawableLeft="@drawable/folder_search"
        android:text="Consultar"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
