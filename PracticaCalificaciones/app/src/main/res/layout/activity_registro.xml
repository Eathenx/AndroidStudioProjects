<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_hlmaodxq_s1gynwftdvsq"
    tools:context=".Registro">
    
    <TextView
    android:id="@+id/text_title_register" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:text="Practica Calificaciones"
    android:textColor="#9E3A38"
    android:textSize="32sp"
    android:textStyle="bold|italic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_user_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="250dp"
        android:text="Usuario"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_username_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:hint="Ingrese usuario"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/text_user_label_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_user_label_register"
        app:layout_constraintTop_toTopOf="@+id/text_user_label_register" />

    <TextView
        android:id="@+id/text_password_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/text_user_label_register"
        app:layout_constraintTop_toBottomOf="@+id/text_user_label_register" />

    <EditText
        android:id="@+id/edit_text_password_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:hint="Ingrese contraseña"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/text_password_label_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_password_label_register"
        app:layout_constraintTop_toTopOf="@+id/text_password_label_register" />

    <TextView
        android:id="@+id/text_confirm_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Confirm Password"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/text_user_label_register"
        app:layout_constraintTop_toBottomOf="@+id/text_password_label_register" />

    <EditText
        android:id="@+id/edit_text_confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:hint="Confirme contraseña"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/text_confirm_password_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_confirm_password_label"
        app:layout_constraintTop_toTopOf="@+id/text_confirm_password_label" />

    <Button
        android:id="@+id/button_register_submit"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#9E3A38"
        android:drawableLeft="@drawable/baseline_cookie_24"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_confirm_password"
        app:strokeColor="#9E3A38"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/button_secondary_action"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#9E3A38"
        android:padding="1dp"
        android:paddingStart="5dp"
        app:cornerRadius="90dp"
        app:icon="@drawable/expand_left"
        app:iconGravity="textStart"
        app:iconSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#9E3A38"
        app:strokeWidth="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
