<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Constraint">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/converted_imagen_de_whatsapp_2025_08_23_a_las_01_37_47_a8ef468e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias=".2"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageview">

        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imageview3"
            android:src="@drawable/sticker_ppg_08_dan_heng__3f_imbibitor_lunae_01"
        />

        <ImageView
            android:id="@+id/imageview3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintLeft_toRightOf="@+id/imageview2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/imageview4"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:src="@drawable/sticker_ppg_08_dan_heng__3f_imbibitor_lunae_01"
            />

        <ImageView
            android:id="@+id/imageview4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintLeft_toRightOf="@+id/imageview3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:src="@drawable/sticker_ppg_08_dan_heng__3f_imbibitor_lunae_01"
            />

</androidx.constraintlayout.widget.ConstraintLayout>